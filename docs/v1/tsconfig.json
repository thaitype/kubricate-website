{
  "compilerOptions": {
    // Base
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    // Dual
    "target": "ESNext",
    "module": "nodenext",
    "moduleDetection": "force",
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    ".vitepress/cache/kubricate/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "*.config.ts",
    "dist",
    ".vitepress/cache/kubricate/**/*.test.ts",
    ".vitepress/cache/kubricate/examples",
    ".vitepress/cache/kubricate/tests"
  ]
}